{
  "framework": null,
  "buildCommand": "",
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/portal", "destination": "/portal/index.html" },
    { "source": "/portal/dashboard", "destination": "/portal/dashboard.html" },
    { "source": "/admin", "destination": "/admin/dashboard.html" },
    { "source": "/admin/dashboard", "destination": "/admin/dashboard.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Authorization,Content-Type" }
      ]
    }
  ]
}
